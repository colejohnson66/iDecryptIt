<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.PreviewWith>
        <Border Padding="10">
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>

    <Style Selector="Border.MainWindowPanelBorder">
        <Setter Property="Background" Value="{DynamicResource ColorBlue100}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Margin" Value="{DynamicResource Padding}" />
    </Style>

    <Style Selector="Border.MainWindowPanelContent">
        <Setter Property="Background" Value="{DynamicResource ColorSlate100}" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Margin" Value="{DynamicResource Padding}" />
    </Style>

</Styles>
