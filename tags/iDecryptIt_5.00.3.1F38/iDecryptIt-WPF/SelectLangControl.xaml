<Window x:Class="SelectLangControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Width="312" Height="167"
        Title="Select Language / Cambio de idioma"
        Icon="Images/Preferences-desktop-locale_es_us.ico"
        ResizeMode="NoResize"
        Topmost="True">
    <Grid Margin="6">
        <Grid.RowDefinitions>
            <RowDefinition Height="128" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="128" />
            <ColumnDefinition Width="12" />
            <ColumnDefinition Width="150" />
        </Grid.ColumnDefinitions>
        <Image Name="imgIcon" Source="Images/Preferences-desktop-locale_es_us_128.png" />
        <Grid Grid.Column="2" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="23" />
                <RowDefinition Height="*" />
                <RowDefinition Height="38" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="38" />
            </Grid.ColumnDefinitions>
            <ComboBox Grid.Row="0" Grid.ColumnSpan="2" Name="cmbSelect">
                <ComboBoxItem Content="English" Name="en" IsSelected="True" />
                <ComboBoxItem Content="Español" Name="es" />
            </ComboBox>
            <Button Name="btnOK" Grid.Column="1" Grid.Row="2">
                <Image Name="imgOK" Source="Images/Media-playback-start_32.png" Stretch="None" />
            </Button>
        </Grid>
    </Grid>
</Window>
